<div id="container">
    <div class="jumbotron">
        <h1>Fighting Games Article Scraper</h1>
    </div>
    <div id="scrape">
        <button type="button" class="btn btn-secondary btn-lg" id="scrapearticles">Scrape Articles</button>
    </div>
    <div id="articles">
        <ol>        
            {{#each article}}
                <li>
                    {{this.title}}
                    {{this.link}}
                    {{#if this.note}}
                    <p class="well">
                        {{this.note.comment}}
                        <div class="btn">   
                            <button data-id="{{this.note._id}}" id="deletenote">Delete Note</button>
                        </div>
                    </p>
                    {{/if}}
                    <br>
                    <form class="create-update-form" action="/articles/{{this._id}}/notes" method="POST">
                        <div class="form-group">
                            <input type="text" name="comment">
                        </div>
                        <div class="btn">   
                            <button type="submit" class="sub">Save Note</button>
                        </div>
                    </form>
                </li>
                <br>
            {{/each}}
        </ol>
    </div>
</div>
    